import java.util.Scanner;

class SodRed

{
	public static void main(String[] args)

	{
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Enter the Number : ");

		int n = sc.nextInt();

		

		while (n>9)

		{
			int sum = 0;

			while (n>0)
			{
				
				sum = sum + (n%10);
				n =n /10;
			

			}

			
			n = sum;

			System.out.println("sum of digits "+n);
			
		}
			
			 System.out.println("Sum of Digits : "+n);
			//System.out.println("Value of n: "+n);


	}
}